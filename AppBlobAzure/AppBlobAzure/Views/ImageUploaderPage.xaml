<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBlobAzure.Views.ImageUploaderPage">
    <ContentPage.Content>
        <StackLayout>
            <Label 
                Text="Upload Image"
                FontAttributes="Bold"
                HorizontalOptions="Center"/>
            <Button
                x:Name="btnTakePic"
                Text="Take Picture"
                Clicked="btnTakePic_Clicked"/>
            <Button
                x:Name="btnSelectPic"
                Text="Select Picture"
                Clicked="btnSelectPic_Clicked"/>
            <Image
                x:Name="Img"
                HeightRequest="200"/>
            <Button
                x:Name="btnUpload"
                Text="Upload SDK11"
                Clicked="btnUpload_Clicked"/>
            <Button
                x:Name="btnUploadSDK12"
                Text="Upload SDK12"
                Clicked="btnUploadSDK12_Clicked"/>
            <ActivityIndicator
                x:Name="actIndicator"/>
            <Label
                x:Name="lblMessage"
                HorizontalTextAlignment="Center"
                TextColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>